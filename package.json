{
  "name": "simplexplorer",
  "version": "1.0.0",
  "description": "A basic file browser built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.simplexplorer.app",
    "productName": "SimplExplorer",
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities",
      "target": ["dmg", "zip"]
    }
  }
}
